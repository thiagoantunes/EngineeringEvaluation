<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="thiagoantunes.engineeringevaluation">

    <application
        android:name=".EngineeringEvaluationApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".userlist.UserListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".useraddedit.UserAddEditActivity"
            android:label="User Form">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thiagoantunes.engineeringevaluation.userlist.UserListActivity" />
        </activity>
        <activity
            android:name=".userdetails.UserDetailsActivity"
            android:label="User Details"
            android:parentActivityName=".userlist.UserListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thiagoantunes.engineeringevaluation.userlist.UserListActivity" />
        </activity>
    </application>

</manifest>