<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="thiagoantunes.engineeringevaluation.useraddedit.UserAddEditViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="@{viewmodel.dataLoading ? View.GONE : View.VISIBLE}">

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:text="@={viewmodel.name}"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:text="@={viewmodel.phone}"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_neighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Neighborhood"
            android:text="@={viewmodel.neighborhood}"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date of birth:"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <!--<DatePicker
            android:id="@+id/date_picker_date_of_birth"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:date="@={viewmodel.dateOfBirth}"
            android:spinnersShown="true" />-->
        <EditText
            android:id="@+id/edit_text_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:inputType="phone"
            android:hint="Date of birth"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="City ID"
            android:textAppearance="@android:style/TextAppearance.Medium" />


        <!--<NumberPicker
            android:id="@+id/number_picker_city_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numeric="@={viewmodel.}"
            android:layout_marginTop="8dp" />-->
    </LinearLayout>
</layout>